<!--components/food_card/food_card.wxml-->
<view class="container" >
  <view class="foodimg">
    <image class="image" mode="aspectFit" src="{{img_url?img_url:'images/food.png'}}"></image>
  </view>
  <view class="food">
    <view class="name"><text decode="true">{{name?name:"Name"}}</text></view>
    <view class="ingredients">
      <text style="color:#a0a0a0;">Ingredients:&nbsp;{{ingredients}}</text>
    </view>
    <view class="price">
      <text style="{{price_style1}}" decode="true">ï¿¥{{standard_price}}</text>
      <text style="{{price_style2}};font-size:24rpx;" decode="true">&nbsp;&nbsp;&nbsp;{{discountprice}}</text>
    </view>
  </view>
</view>
