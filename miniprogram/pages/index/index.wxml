<!--miniprogram/pages/index/index.wxml-->
<view class="header">
  <view class="userinfo" style="position: relative; top: auto">
    <block class="userinfo-opendata">
      <view class="userinfo-block-avatar" bindtap="bindViewTap">
        <open-data type="userAvatarUrl"></open-data>
      </view>
    </block>
    <!-- <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-block-avatar" src="{{avatarUrl}}" mode="cover"></image>
    </block> -->
    <view class="userinfo-nickname-wrapper">
      <view class="location" bindtap="getLocation">
        <image class="img-icon" mode="aspectFit" src="images/icon_map.png"></image><text decode="{{true}}">&nbsp;&nbsp;{{location}}</text> 
      </view>
      Hey,<open-data type="userNickName"></open-data>
    </view>
    <image class="img-icon_add" mode="aspectFit" src="images/icon_add.png" bindtap="add"></image>
  </view>
</view>
<view class="body">
  <view class="title">Categories</view>
  <food_card standard_price="150" discount_price="80"></food_card>
  <scroll-view scroll-x="true" class="tab-h" enable-flex="true" scroll-left="{{scrollLeft}}"  showScrollbar="{{ false }}">
    <view class="tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="switchNav"><image class="img-cat"  mode="aspectFit" src="images/burger.png" ></image></view>
    <view class="tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="switchNav" ><image class="img-cat"  mode="aspectFit" src="images/coffee.png"></image></view>
    <view class="tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="switchNav" ><image class="img-cat"  mode="aspectFit" src="images/soup.png" ></image></view>
    <view class="tab-item {{currentTab==3?'active':''}}" data-current="3" bindtap="switchNav" ><image class="img-cat"  mode="aspectFit" src="images/sushi.png" ></image></view>
 </scroll-view>
 <view class="title">Recommended</view>
 <restaurant_card self_tags="pizza;gourmet"></restaurant_card>
 <swiper class="tab-content" current="{{currentTab}}" duration="300" bindchange="switchTab"
  style="height:{{winHeight}}rpx">
  <swiper-item wx:for="{{[0,1,2,3]}}">
   <scroll-view scroll-y="true" class="scoll-h" >
    <block wx:for="{{[1,2,3,4,5,6,7,8]}}" wx:key="*this">
     <view class="item-ans">
      <!-- <view class="avatar">
       <image class="img" src="/avatar.png"></image>
      </view> -->
      <view class="expertInfo">
       <view class="name">欢颜</view>
       <view class="tag">知名情感博主</view>
       <view class="answerHistory">134个回答，2234人听过 </view>
      </view>
      <navigator url="/pages/index/menu/menu" class="askBtn">问TA</navigator> 
     </view>
    </block>
   </scroll-view>
  </swiper-item>
 </swiper>
</view>