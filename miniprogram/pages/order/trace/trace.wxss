/* miniprogram/pages/order/trace/trace.wxss */
.header{
  height: 450rpx;
  width: 100%;
  position: absolute;
  top:0rpx;
  z-index: 1;
}
.background{
  top:-20rpx;
  width:100%;
  height:100%;
}
.body{
  position: absolute;
  background-color: #f4f5f9;
  top: 420rpx;
  display: flex;
  flex-flow: column;
  bottom: 0;
  width: 100%;
  z-index: 2;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  align-items: center;
  -webkit-overflow-scrolling: touch;
}

.navbar {
  position: relative;
  top:100rpx;
  width: 420rpx;
  height: 120rpx;
  display: flex;
  box-sizing: border-box;
  align-items: center;
  justify-content:center;
  white-space: nowrap;
  z-index: 5;
  -webkit-overflow-scrolling: touch;
}
.nav-item {
  padding-left: 10rpx;
  padding-right: 10rpx;
  height: 100%;
  display: inline-block;
  /* 普通文字大小 */
  font-size: 28rpx;
  align-items: center;
  justify-content:center
}

.nav-text {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  letter-spacing: 4rpx;
  box-sizing: border-box;
}

.info{
  position: relative;
  padding-top:160rpx;
  font-size:50rpx;
}

.history{
  position: relative;
  padding-top:50rpx;
  font-size:35rpx;
}

.list{
  position: relative;
}
.setting{
  width:400rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center; 
  padding-bottom: 40rpx;
}
.icon{
  position: relative;
  height:100rpx;
  width:20%;
  padding-right: 20rpx;
}
.block{
  position: relative;
  width:80%;
  
}
.location{
  font-size: 40rpx;
}
.time{
  font-size: 20rpx;
  color:#8e9097;
}
.expiration{
  position: relative;
  padding-top: 50rpx;
}