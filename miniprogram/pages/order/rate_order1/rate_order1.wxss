/* miniprogram/pages/order/rate_order1/rate_order1.wxss */
.header{
  background-color: #FF9F48;
  height: 0rpx;
  width: 100%;
  position: fixed;
  z-index: -1;
  border-bottom: 50rpx solid #FF9F48;
}
.body{
  position: fixed;
  top: 0rpx;
  display: flex;
  flex-flow: column;
  bottom: 0;
  width: 100%;
  z-index: 1;
  background-color: #FFFFFF;
  border: 1px solid #FFFFFF;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
}
.question{
  width: 88%;
  margin-top: 40rpx;
  margin-bottom: 24rpx;
  margin-left: 6%;
  margin-right: 6%;
  font-size: 32rpx;
}
.stars{
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  width: 72%;
  margin-left: 14%;
  margin-right: 14%;
  display: flex;
  flex-flow: row;
  justify-content: space-around;
}
.star{
  height: 80rpx;
  width: 80rpx;
}
.grid {
  width: 88%;
  margin-left: 6%;
  margin-right: 6%;
  display: flex;
  justify-content: space-around;
}
.tag{
  margin: 16rpx 8rpx 16rpx 8rpx;
  height: 48rpx;
  padding-top: 8rpx;
  background-color: #f4f5f6;
  font-size: 24rpx;
  width: fit-content;
  vertical-align: bottom;
  border-bottom-right-radius: 16rpx;
  border-bottom-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  border-top-left-radius: 16rpx;
}
.title{
  font-size: 40rpx;
  text-align: center;
  margin-top: 20rpx;
}
.btn{
  border-radius: 40rpx;
  position: fixed; 
  bottom: 100rpx;
  align-self: center;
  width: 88%;
  height: 76rpx; 
  font-size: 32rpx;
}