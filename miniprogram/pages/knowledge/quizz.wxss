/* miniprogram/pages/knowledge/quizz.wxss */
.header{
  background-color: #FF9F48;
  height: 320rpx;
  width: 100%;
  position: fixed;
  z-index: -1;
  border-bottom: 50rpx solid #FF9F48;
}
.title{
  font-size: 65rpx;
  font-weight: 500;
}
.subtitle{
  font-size: 45rpx;
  font-weight: 400;
}
.tab-h{
  display: flex;
  flex-wrap: wrap;
  flex-flow: row;
  flex-direction: row;
  justify-content: space-around;
  height: 140rpx;
  width: 100%; 
  line-height: 80rpx;
  background: #FFFFFF;
  position: fixed;
  bottom: 0rpx;
}
.question{
  font-size: 40rpx;
  color:#333333;
}
.body{
  position: fixed;
  top: 320rpx;
  width: 100%;
  background-color: #FFFFFF;
  border: 1px solid #FFFFFF;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
}
.choice > view{
  color: #333333;
  font-size: 42rpx;
  background: #F4F5F9;
  padding: 11rpx 27rpx;
  border-radius: 50rpx;
  margin-top: 40rpx;
  cursor: pointer;
}
.choice .chosen{
  color:#333333;
  background-color: #FF9F48;
  font-size: 42rpx;
}
.choice .correct{
  color:#ffffff;
  background-color: #00ff00;
  font-size: 42rpx;
}
.choice .incorrect{
  color:#ffffff;
  background-color: #ffb6c1;
  font-size: 42rpx;
}